//Arquivo de configurações do VsCode - f1 > settings.json Preference Open Settings
{
  "window.zoomLevel": 0,
  "files.autoSave": "off",
  "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
  "workbench.iconTheme": "vscode-icons",
  // Configura tamanho e familia da fonte
  "editor.formatOnSave": true,
  // Aplica linhas verticais para lembrar de quabrar linha em códigos
  "prettier.eslintIntegration": true,
  "terminal.explorerKind": "external",
  "workbench.startupEditor": "newUntitledFile",
  "git.confirmSync": false,
  "liveServer.settings.donotVerifyTags": true,
  "workbench.colorTheme": "Dracula",
  // limite de linha no código
  "editor.rulers": [80, 120],
  "editor.tabSize": 2,
  //Aplica um sinal visual na esquerda da linha selecionada
  "editor.renderLineHighlight": "gutter",
  "terminal.integrated.fontSize": 16,
  "emmet.syntaxProfiles": {
    "javascript": "jsx"
  },
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "breadcrumbs.enabled": true,
  //eslint
  "eslint.autoFixOnSave": true,
  "eslint.validate": [
    {
      "language": "javascript",
      "autoFix": true
    },
    {
      "language": "javascriptreact",
      "autoFix": true
    },
    {
      "language": "typescript",
      "autoFix": true
    },
    {
      "language": "typescriptreact",
      "autoFix": true
    }
  ]
}
